{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "front/build",
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
