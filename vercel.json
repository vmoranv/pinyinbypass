{
  "version": 2,
  "builds": [
    {
      "src": "front/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/src/server.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/front/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}
