{
  "version": 2,
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/node@latest"
    }
  },
  "outputDirectory": "front/build",
  "buildCommand": "cd front && npm install && npm run build",
  "installCommand": "cd front && npm install && cd ../server && npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
